@model SD_340_W22SD_Final_Project_Group6.Models.ViewModel.ItemWithUsersViewModel<Ticket>

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item.Id" />
            <input type="hidden" asp-for="Item.ProjectId" />
            <input type="hidden" asp-for="Item.TicketPriority" />
            <input type="hidden" asp-for="Item.Completed" />
            <div class="form-group">
                <label asp-for="Item.Title" class="control-label"></label>
                <input asp-for="Item.Title" class="form-control" />
                <span asp-validation-for="Item.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Body" class="control-label"></label>
                <input asp-for="Item.Body" class="form-control" />
                <span asp-validation-for="Item.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.RequiredHours" class="control-label"></label>
                <input asp-for="Item.RequiredHours" class="form-control" />
                <span asp-validation-for="Item.RequiredHours" class="text-danger"></span>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Item.Owner)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Item.Owner</td>
                    </tr>
                </tbody>
            </table>
            <div class="form-group">
                <label asp-for="Item.OwnerId" class="control-label">Select Users:</label>
                <select asp-for="Item.OwnerId" asp-items="Model.Users"></select>
                <span asp-validation-for="Item.OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Projects">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
