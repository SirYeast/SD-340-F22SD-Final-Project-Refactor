@model SD_340_W22SD_Final_Project_Group6.Models.ViewModel.ItemWithUsersViewModel<Project>

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item.Id" />
            <div class="form-group">
                <label asp-for="Item.ProjectName" class="control-label"></label>
                <input asp-for="Item.ProjectName" class="form-control" />
                <span asp-validation-for="Item.ProjectName" class="text-danger"></span>
            </div>
            <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item.AssignedTo)
            </th>
        </tr>
    </thead>
    <tbody>

@foreach (UserProject item in Model.Item.AssignedTo) {
        <tr>
            <td>
                @item.ApplicationUser.UserName;
            </td>
            <td>
                <a asp-action="RemoveAssignedUser" asp-controller="Projects" asp-route-id="@item.ApplicationUser.Id" asp-route-projId="@Model.Item.Id">Remove</a>
            </td>
        </tr>
}
    </tbody>
</table>
                <div class="form-group">
                    <input type="hidden" value=@Model.Item.Id name="ticketId" />
                    <label asp-for="Item.AssignedTo" class="control-label">Select Users:</label>
                    <select name="userIds" asp-for="Item.AssignedTo" asp-items=@Model.Users></select>
                    <span asp-validation-for="Item.AssignedTo" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
